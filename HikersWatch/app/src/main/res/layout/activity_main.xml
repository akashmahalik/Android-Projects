<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.akash.hikerswatch.MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/hike" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Hiker's Watch"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/lonTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/latTextView"
        android:layout_below="@+id/latTextView"
        android:layout_marginTop="48dp"
        android:text="Latitude: 12.23"
        android:textColor="@android:color/holo_red_dark" />

    <TextView
        android:id="@+id/latTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="48dp"
        android:layout_toStartOf="@+id/textView"
        android:text="Longitude: 12.23"
        android:textColor="@android:color/holo_red_dark" />

    <TextView
        android:id="@+id/accTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lonTextView"
        android:layout_marginTop="48dp"
        android:layout_toStartOf="@+id/textView"
        android:text="Accuracy: 12.23"
        android:textColor="@android:color/holo_red_dark" />

    <TextView
        android:id="@+id/altTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/accTextView"
        android:layout_below="@+id/accTextView"
        android:layout_marginTop="50dp"
        android:text="Altitude :"
        android:textColor="@android:color/holo_red_dark" />

    <TextView
        android:id="@+id/addTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address: \n 123 Fake Street \n Fake Town \n"
        android:textColor="@android:color/background_light"
        tools:textColor="@android:color/holo_red_dark"
        android:layout_alignBaseline="@+id/latTextView"
        android:layout_alignBottom="@+id/latTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="48dp" />
</android.widget.RelativeLayout>
